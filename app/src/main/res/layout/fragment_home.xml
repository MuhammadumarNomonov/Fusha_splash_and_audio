<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_fon"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fusha"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sticker777" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Arab tilini \no‘rganing"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Boshlang’ich darslardan boshlang va arab tilini o‘zbek tilida o‘rganing."
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- CARD - Darslar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLessons"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/kitob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iconLessons"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:contentDescription="Darslar"
                    android:src="@drawable/kitob" />

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titleLessons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arab Harflari"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/descLessons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bosqichma-bosqich alifbo"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Next"
                    android:src="@drawable/next2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD - So'zlar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWords"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iconWords"
                    android:layout_width="40dp"
                    android:layout_height="50dp"

                    android:contentDescription="So'zlar"
                    android:src="@drawable/sms" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titleWords"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Mad Va Tashdid darslari"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Next"
                    android:src="@drawable/next2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"

            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/qoida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iconRules"
                    android:layout_width="40dp"
                    android:layout_height="50dp"

                    android:contentDescription="Qoidalar"
                    android:src="@drawable/qoidalar" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titleRules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qoidalar"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descRules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grammatik qoidalar"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Next"
                    android:src="@drawable/next2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"

            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iconTests"
                    android:layout_width="40dp"
                    android:layout_height="50dp"

                    android:contentDescription="Testlar"
                    android:src="@drawable/test" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titleTests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Testlar"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descTests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mavzularni tekshiring"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Next"
                    android:src="@drawable/next2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CARD - Qayta eslash -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">



            <LinearLayout
                android:id="@+id/restrat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iconRepeat"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/translate" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/titleRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarjimon"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O`zbek tilida arab lug`atlarini yod oling"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Next"
                    android:src="@drawable/next2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>

