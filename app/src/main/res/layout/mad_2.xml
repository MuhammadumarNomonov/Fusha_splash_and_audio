<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Asoslar2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#EB3A74"
        android:layout_height="match_parent"
        android:padding="10dp">

        <!-- Sarlavha -->
        <TextView
            android:id="@+id/class_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="~-Mad"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Izoh matni -->
        <TextView
            android:id="@+id/class_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_title2"
            android:layout_alignStart="@id/class_title2"
            android:layout_marginTop="6dp"
            android:text="Arab tilida Cho`zib o`qish"
            android:textColor="#ECEFF1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Ikonka -->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/item_rang3"
            android:padding="10dp"
            android:src="@drawable/mad"
            app:tint="#FFFFFF" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
