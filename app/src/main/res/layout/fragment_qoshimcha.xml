<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mad_complete_grd"
    android:padding="16dp">

    <!-- Lottie animatsiya -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/done"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.25" />

    <!-- Kitob ikonka -->
    <ImageView
        android:id="@+id/bookIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/book"
        android:contentDescription="Book Icon"
        app:layout_constraintTop_toBottomOf="@id/lottieAnim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Asosiy matn -->
    <TextView
        android:id="@+id/mainText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tabriklaymiz 🎉"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/bookIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Katta yozuv -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Siz Mad bo‘limini tugatdingiz ✅"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/mainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Motivatsion yozuv -->
    <TextView
        android:id="@+id/secondaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Endi Tashdid qoidalari darslarini boshlang 🚀"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Eslatma -->
    <TextView
        android:id="@+id/sukunNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📌 Eslatma: Sukun ( ْ ) harfni harakatsiz, qisqa pauza bilan o‘qiladi."
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#B0BEC5"
        app:layout_constraintTop_toBottomOf="@id/secondaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Misollar -->
    <LinearLayout
        android:id="@+id/examplesBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/sukunNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اِبْنٌ → Ibnun"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="يَكْتُبُ → Yaktubu"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Tugma -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Davom etish ➡️"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF6A00"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/examplesBlock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
