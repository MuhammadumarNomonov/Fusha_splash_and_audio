<resources>


    <style name="BarakallaTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material ranglar -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
    </style>

    <!-- Sizning avvalgi style -->
    <style name="WordStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- ðŸ”µ Tugmalar uchun umumiy style -->
    <style name="GameButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/btn_letter_bg</item>
        <item name="android:textColor">#301C4F</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- âœ… Tekshirish tugmasi uchun style -->
    <style name="CheckButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A6A0A0</item>
        <item name="android:background">#F9F2FD</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- ðŸ“Š ProgressBar ichidagi kartalar uchun style -->
    <style name="ScoreCardStyle" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- ðŸŽ§ Ovozni eshitish tugmasi uchun style -->
    <style name="VolumeButtonStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/question_mark1</item> <!-- oâ€˜zingiz mos rasm fayl qoâ€˜ying -->
    </style>

    <style name="CardSlotStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">#CCCCCC</item>
        <item name="strokeWidth">2dp</item>
    </style>


</resources>
